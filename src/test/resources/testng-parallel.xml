<?xml version="1.0" encoding="UTF-8"?>
<suite name="Hepsiburada Mobile Parallel Test Suite" 
       verbose="1" 
       parallel="methods" 
       thread-count="3" 
       data-provider-thread-count="3">
    
    <!-- Global Test Configuration for Parallel Execution -->
    <parameter name="platform" value="Android"/>
    <parameter name="environment" value="test"/>
    <parameter name="parallelExecution" value="true"/>
    
    <!-- Listeners for enhanced reporting and logging -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.aventstack.extentreports.testng.listener.ExtentITestNGListener"/>
    </listeners>

    <!-- Parallel Smoke Tests -->
    <test name="Parallel Smoke Tests" 
          enabled="true" 
          parallel="methods" 
          thread-count="2">
        <parameter name="testType" value="smoke"/>
        
        <groups>
            <run>
                <include name="smoke"/>
                <exclude name="ignore"/>
                <exclude name="no-parallel"/> <!-- Exclude tests that can't run in parallel -->
            </run>
        </groups>
        
        <classes>
            <class name="com.hepsiburada.runners.ParallelTestRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Parallel Regression Tests -->
    <test name="Parallel Regression Tests" 
          enabled="true" 
          parallel="methods" 
          thread-count="3">
        <parameter name="testType" value="regression"/>
        
        <groups>
            <run>
                <include name="regression"/>
                <exclude name="ignore"/>
                <exclude name="no-parallel"/>
                <exclude name="performance"/>
            </run>
        </groups>
        
        <classes>
            <class name="com.hepsiburada.runners.ParallelTestRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>